{% macro sidebar_button(content, icon_path, icon_size='cover') %}
    <button
        class="px-4 py-2.5 w-[100%] flex flex-row justify-start items-center gap-[1em] rounded-[1rem] 
            transition-all duration-[200ms] hover:bg-gray-900 hover:bg-opacity-50
            active:bg-gray-800 active:duration-[0ms] active:scale-[0.95]"
    >
        <div 
            class="h-[100%] aspect-[1/1] flex flex-row justify-start items-center"
            style="
                background-image: url('{{ url_for('assets', path=icon_path) }}');
                background-size: {{ icon_size }};
                background-position: center;
                background-repeat: no-repeat;
            "
        ></div>
        <div class="flex-1 flex flex-row justify-start items-center">
            <span class="text-white font-inter">{{ content }}</span>
        </div>
    </button>
{% endmacro %}